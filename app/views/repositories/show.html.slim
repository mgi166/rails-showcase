div.repo.container
  div.user-stats.col-md-3
    div.row
      a[href=@repository.user.html_url]
        img[src=@repository.user.avatar_url]
    div.row
      h2 = @repository.user.login
  div.repo-stats.col-md-9
    div.row
      h2.display-4: a[href=@repository.html_url] = @repository.full_name
    div.row
      br
    div.row
      p.lead = @repository.description
    div.row
      table.table
        thead.thead-default
          tr
            th Stars
            th Forks
        tbody
          tr
            td: i.fa.fa-star[aria-hidden="true"] = @repository.stargazers_count
            td: span.octicon.octicon-repo-forked = @repository.forks_count
